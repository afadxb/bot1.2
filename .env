# Premarket runtime configuration
# Copy this file when deploying to production and supply real credentials.

# Required: Finviz export URL (with your Elite token)
FINVIZ_EXPORT_URL="https://elite.finviz.com/export.ashx?v=152&auth=REPLACE_ME"

# Optional: Finviz Elite news export URL
FINVIZ_NEWS_EXPORT_URL="https://elite.finviz.com/news_export.ashx?v=3&auth=REPLACE_ME"

# Optional: Finnhub API token for additional news context
FINNHUB_API_KEY="REPLACE_ME"

# Workflow overrides
PREMARKET_CONFIG_PATH="config/strategy.yaml"
PREMARKET_OUT_DIR="data/watchlists"
PREMARKET_TOP_N=20
PREMARKET_USE_CACHE=true
PREMARKET_NEWS_ENABLED=true
PREMARKET_MAX_PER_SECTOR=0.4
PREMARKET_LOG_FILE="logs/premarket.log"
PREMARKET_DATE=""
PREMARKET_FAIL_ON_EMPTY=false
PREMARKET_TZ="America/New_York"

# Shared SQLite database path for downstream phases (Phase-2, dashboard)
PREMARKET_SHARED_DB="data/watchlists/watchlist.db"

# Cache TTL (minutes) for fallback CSV reuse
CACHE_TTL_MIN=60
