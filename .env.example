# SteadyAlpha Screener sample configuration

# Timezone used for scheduling and timestamps
TZ="America/New_York"

# Finviz Elite export URL (include your auth token)
FINVIZ_EXPORT_URL="https://elite.finviz.com/export.ashx?..."

# Screener thresholds
TOP_N=40
MIN_GAP_PCT=2.0
MIN_PM_VOL=200000

# MySQL connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=screener
DB_PASS=secret
DB_NAME=steadyalpha

# Scheduler window (pre-market cadence)
JOB_SCREENER_PM_START="08:30"
JOB_SCREENER_PM_END="09:15"
JOB_SCREENER_PM_EVERY_MIN=5

# Optional notifications
PUSHOVER_USER_KEY=""
PUSHOVER_API_TOKEN=""
